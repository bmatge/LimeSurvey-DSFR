{#
LimeSurvey - DSFR Theme
Footer DSFR conforme avec liens obligatoires
#}

<!-- DSFR Footer -->
<footer class="fr-footer" role="contentinfo" id="footer">
    <div class="fr-container">
        <div class="fr-footer__body">
            <div class="fr-footer__brand fr-enlarge-link">
                <a href="{{ aSurveyInfo.surveyUrl }}" title="{{ gT("Home") }}">
                    <p class="fr-logo">République<br>Française</p>
                </a>
            </div>
            <div class="fr-footer__content">
                <p class="fr-footer__content-desc">{{ aSurveyInfo.name }}</p>
                {# Liens optionnels ici si besoin #}
            </div>
        </div>
        <div class="fr-footer__bottom">
            <ul class="fr-footer__bottom-list">
                <li class="fr-footer__bottom-item">
                    <a class="fr-footer__bottom-link" href="#">
                        {{ gT("Accessibility: non compliant") }}
                    </a>
                </li>
                <li class="fr-footer__bottom-item">
                    <a class="fr-footer__bottom-link" href="#">
                        {{ gT("Legal notice") }}
                    </a>
                </li>
                {% if aSurveyInfo.aNavigator.privacy.show == "Y" %}
                <li class="fr-footer__bottom-item">
                    <a class="fr-footer__bottom-link" href="{{ aSurveyInfo.aNavigator.privacy.url }}">
                        {{ gT("Privacy policy") }}
                    </a>
                </li>
                {% endif %}
                <li class="fr-footer__bottom-item">
                    <a class="fr-footer__bottom-link" href="#">
                        {{ gT("Cookies management") }}
                    </a>
                </li>
                <li class="fr-footer__bottom-item">
                    <a class="fr-footer__bottom-link" href="https://www.limesurvey.org" target="_blank" rel="noopener">
                        Powered by LimeSurvey
                    </a>
                </li>
            </ul>
            <div class="fr-footer__bottom-copy">
                <p>© {{ "now"|date("Y") }} {{ gT("French Republic") }}</p>
            </div>
        </div>
    </div>
</footer>
